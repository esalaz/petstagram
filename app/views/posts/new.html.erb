<div class="smallpagetitle pagetitle"><%=link_to (image_tag("/assets/images/petstagram.png")), home_path %></div>
<div class="allforms">
  <h1>Share A Pic</h1>
  <%= form_with model: @post do |form| %>
    <%= form.file_field :image, placeholder: "image", class: :forminput %> <br>
    <%= form.hidden_field :image_cache %>
    <%= form.text_field :comment, placeholder: 'comment', class: :forminput %> <br>
    <%= form.select :pet_id, @pet_selector, {}, class: :formselect %> <br>
    <%= form.submit "Post Pic", class: :formsubmit %>
  <% end %>
</div>
